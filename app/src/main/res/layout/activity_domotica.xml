<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/HomePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Logo IntelliHome -->
    <ImageView
        android:id="@+id/logoIntelliHome"
        android:layout_width="174dp"
        android:layout_height="97dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/logodeintellihome"
        android:src="@drawable/logo_ih"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.6" />

    <!-- Botón Regresar -->
    <ImageView
        android:id="@+id/botonRegresar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:contentDescription="@string/botonRegresar"
        android:src="@drawable/botonregresar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/fondomenu"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:src="@drawable/fondomenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Botón LED 1 -->
    <Button
        android:id="@+id/buttonLed1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED Dormitorio_1 OFF"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/logoIntelliHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón LED 2 -->
    <Button
        android:id="@+id/buttonLed2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED Dormitorio_2 OFF"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonLed1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón LED 3 -->
    <Button
        android:id="@+id/buttonLed3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED Baño OFF"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonLed2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón LED 4 -->
    <Button
        android:id="@+id/buttonLed4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED Cocina OFF"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonLed3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Sensor Ball -->
    <Button
        android:id="@+id/buttonSensorBall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensor Ball OFF"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonLed4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Sensor Flame -->
    <Button
        android:id="@+id/buttonSensorFlame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensor Flame OFF"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSensorBall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Sensor Humedad -->
    <Button
        android:id="@+id/buttonSensorHumedad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensor Humedad OFF"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSensorFlame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
